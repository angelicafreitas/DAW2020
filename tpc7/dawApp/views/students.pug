extends layout

block content
    .w3-card
        header.w3-container.w3-teal
            div
                h3.w3-left Students List {DAW2020}
                a(href="http://localhost:7700/students/register", class="w3-button w3-circle w3-card-4", style="cursor:pointer;border:2px solid white;margin-top:10px;padding:6px;float:right") 
                    i(class="fas fa-plus")
        if list.length > 0 
            .w3-container
                table.w3-table-all
                    tr 
                        th Number
                        th Name
                        th Git
                        th
                        th
                    each s in list
                        tr
                            td
                                a(href=`/students/${s.numero}`)=s.numero
                            td= s.nome
                            td= s.git
                            td
                                i(class="far fa-trash-alt", onClick=`deleteStudent("${s.numero}")`, style="cursor:pointer;color:red")
                            td
                                i(class="far fa-edit", style="cursor:pointer;color:teal")
        else
            .w3-container
                p There are no students...
        footer.w3-container.w3-teal
            address Gerado por dawApp :: 2020-Nov, amf
    script(src="https://code.jquery.com/jquery-3.5.1.min.js",integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=",crossorigin="anonymous")
    script(src="javascripts/app.js")
        